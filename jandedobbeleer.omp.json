{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#27ae60",
                    "style": "plain",
                    "template": " \u279c",
                    "type": "text"
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#8e44ad",
                    "properties": {
                        "style": "folder"
                    },
                    "template": "  <b>{{ .Path }}</b>  "
                },
                {
                    "background": "#2ecc71",
                    "foreground": "#1d2022",
                    "properties": {
                        "branch_icon": " ",
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true,
                        "fetch_worktree_count": true
                    },
                    "style": "diamond",
                    "leading_diamond": "\ue0b6",
                    "template": " \uf113 {{ .HEAD }} ",
                    "trailing_diamond": "\ue0b4",
                    "type": "git"
                },
                {
                    "foreground": "#BF616A",
                    "style": "plain",
                    "template": " ",
                    "type": "exit"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}